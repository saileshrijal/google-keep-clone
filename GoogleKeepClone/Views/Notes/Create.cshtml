@model GoogleKeepClone.ViewModels.CreateNotesVm
@{
    ViewData["Title"] = "New Notes";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h4 class="card-title">New Note</h4>
            <a asp-action="Index" class="btn btn-warning"><i class="bi bi-arrow-left-circle"></i> Go Back</a>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="mb-3">
                    <label for="title">Title</label>
                    <input type="text" id="title" asp-for="Title" required class="form-control" placeholder="Enter title here">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                 <div class="mb-3">
                    <label for="description">Description</label>
                    <textarea rows="8" id="description" asp-for="Description" class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <label for="color" class="d-block">Choose Color</label>
                    <input type="color" id="color" asp-for="Color">
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-success w-100"><i class="bi bi-box-arrow-down"></i> Save</button>
                </div>
            </form>
        </div>
    </div>
</div>